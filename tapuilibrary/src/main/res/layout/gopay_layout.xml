<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <company.tap.tapuilibrary.uikit.views.TapSelectionTabLayout
        android:id="@+id/tab_select_gopay"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <company.tap.tapuilibrary.uikit.organisms.GoPayLoginInput
        android:id="@+id/gopay_login_input"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <company.tap.tapuilibrary.uikit.organisms.GoPayPasswordInput
        android:id="@+id/goPay_password"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="visible" />

</LinearLayout>