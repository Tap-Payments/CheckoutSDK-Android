<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layoutDirection="locale"
    >

    <company.tap.tapuilibrary.uikit.atoms.TapTextViewNew
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="We Accept"
        android:layout_weight="0.5"
        android:id="@+id/acceptedCardText"
        android:paddingStart="@dimen/_4sdp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:textSize="@dimen/font_size_11sp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="#9F9F9F"
        android:layout_marginTop="1dp"
        android:textAllCaps="true"
        android:gravity="center" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabGravity="start"
        android:layout_weight="1.5"

        android:focusable="false"
        android:clickable="false"
        app:tabRippleColor="@null"
        android:overScrollMode="never"
        app:tabMode="fixed"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        android:layout_gravity="start"
        app:tabIndicatorGravity="bottom"
        android:fitsSystemWindows="true"
        app:tabIndicatorFullWidth="true" />

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/powered_by_tap"
        android:id="@+id/powerdBy_logo"
        android:background="@color/black_color"
        android:layout_gravity="end"
        android:gravity="end"
        android:visibility="gone"
        />

</LinearLayout>
