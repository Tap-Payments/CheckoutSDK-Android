<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardscan_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/red_error"
        android:id="@+id/topTextLinear"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.atoms.TapChip
            style="@style/CustomCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="#f4f4f4">
            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/cardscan_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_basic_16dp"
                android:layout_marginTop="@dimen/margin_basic_16dp"
                android:layout_marginBottom="@dimen/margin_basic_16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#4b4847"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Ready to scan." />
        </company.tap.tapuilibrary.uikit.atoms.TapChip>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/inline_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>