        android:width="100dp"
        android:height="100dp"
        android:top="15dp"
        android:right="15dp"
        android:bottom="15dp"
        android:left="15dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke android:width="8dp"
                android:color="@color/red_error"/>
        </shape>
    </item>
</layer-list>