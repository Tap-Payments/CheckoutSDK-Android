<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backgr">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/launchSDK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="99dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="112dp"
        android:gravity="center"
        android:onClick="openBottomSheet"
        android:padding="20dp"
        android:text="@string/launch_sdk"
        android:visibility="gone"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignBottom="@+id/launchSDK"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="vertical">

        <company.tap.tapuilibraryy.uikit.views.TabAnimatedActionButton
            android:id="@+id/payButton_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="22dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginStart="@dimen/margin_basic_20dp"
            android:layout_marginEnd="@dimen/margin_basic_20dp"/>

    </LinearLayout>



</RelativeLayout>