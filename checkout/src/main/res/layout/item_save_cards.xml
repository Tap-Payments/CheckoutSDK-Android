<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="65dp"
    android:gravity="center"
    android:layout_marginBottom="@dimen/margin_basic_10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layoutDirection="locale"
    android:textDirection="locale"
    android:id="@+id/shakingArea">

    <ImageView
        android:id="@+id/deleteImageViewSaved"
        android:layout_width="21dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentEnd="true"
        android:elevation="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-1dp"
        android:clipToOutline="true"
        android:visibility="visible"
        android:layout_above="@+id/tapCardChip2" />

    <FrameLayout
        android:id="@+id/tapCardChip2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginBottom="18dp"
        tools:background="@color/red_error"
        android:hardwareAccelerated="true"
        android:layout_gravity="center">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/tapCardChip2Constraints"
            android:orientation="horizontal"
            android:paddingTop="5dp"

            android:layoutDirection="locale"
            android:textDirection="locale"
            android:paddingBottom="5dp">

            <company.tap.tapuilibrary.uikit.atoms.TapImageView
                android:id="@+id/imageView_amex"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mastercard"
                android:adjustViewBounds="true"

                android:layoutDirection="locale"
                android:textDirection="locale"

               app:layout_constraintStart_toStartOf="@+id/tapCardChip2Constraints"
                android:layout_marginStart="@dimen/margin_basic_10dp"
android:layout_marginEnd="@dimen/margin_basic_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/textViewCardDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="start"
                android:layoutDirection="locale"
                android:textDirection="locale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_amex"
                tools:text="•••• XXXX" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

