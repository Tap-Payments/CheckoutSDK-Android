<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    xmlns:card_view="http://schemas.android.com/tools"

    android:layout_height="40dp"

    android:gravity="center"
    android:layout_marginBottom="@dimen/margin_basic_10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layoutDirection="locale"
    app:cardCornerRadius="8dp"
    card_view:cardElevation="20dp"
    android:textDirection="locale"
    android:id="@+id/card_view">



    <FrameLayout
        android:id="@+id/tapCardChip2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        tools:background="@color/red_error"
        android:hardwareAccelerated="true"
        android:layout_gravity="center">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tapCardChip2Constraints"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            android:textDirection="locale"
            >

            <ImageView
                android:id="@+id/deleteImageViewSaved"
                android:layout_width="15dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:layout_margin="6dp"
                android:src="@drawable/close_icon"
                android:visibility="visible"

                />
            <company.tap.tapuilibrary.uikit.atoms.TapImageView
                android:id="@+id/imageView_amex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mastercard"
                android:adjustViewBounds="true"

                android:layoutDirection="locale"
                android:textDirection="locale"

               app:layout_constraintStart_toStartOf="@+id/tapCardChip2Constraints"
                android:layout_marginStart="@dimen/margin_basic_10dp"
android:layout_marginEnd="@dimen/margin_basic_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/textViewCardDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="start"
                android:layoutDirection="locale"
                android:textDirection="locale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_amex"
                tools:text="•••• XXXX" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>

