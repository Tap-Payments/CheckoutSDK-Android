<com.google.android.material.card.MaterialCardView android:id="@+id/tapCardChip2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:elevation="1dp"
    android:clipToPadding="false"
    android:layout_margin="2.5dp"
    app:rippleColor="@android:color/transparent"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    tools:background="@color/red_error"
    android:hardwareAccelerated="true"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tapCardChip2Constraints"
            android:orientation="horizontal"

            android:layoutDirection="locale"
            android:textDirection="locale"
            >

            <company.tap.tapuilibrary.uikit.atoms.TapImageView
                android:id="@+id/imageView_amex"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mastercard"
                android:adjustViewBounds="true"

                android:layoutDirection="locale"
                android:textDirection="locale"

               app:layout_constraintStart_toStartOf="@+id/tapCardChip2Constraints"
                android:layout_marginStart="@dimen/margin_basic_10dp"
android:layout_marginEnd="@dimen/margin_basic_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextViewNew
                android:id="@+id/textViewCardDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:textColor="#CFCFCF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="start"
                android:layoutDirection="locale"
                android:textDirection="locale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_amex"
                tools:text="•••• XXXX" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

