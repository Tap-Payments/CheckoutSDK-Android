<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blurkit="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sdkCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:fillViewport="true"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize|adjustPan"
    app:cardBackgroundColor="#10ffffff"
    tools:context=".open.CheckoutFragment">


    <FrameLayout
        android:id="@+id/bttomSheetbehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">



            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                app:behavior_hideable="false"
                app:behavior_peekHeight="0dp">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:windowSoftInputMode="adjustResize|adjustPan"
                    tools:context=".open.CheckoutFragment">





                    <LinearLayout
                        android:id="@+id/headerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:context=".open.CheckoutFragment">

                            <LinearLayout
                                android:id="@+id/fragment_all"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible" />

                            <FrameLayout
                                android:id="@+id/webFrameLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:visibility="gone" />

                            <FrameLayout
                                android:id="@+id/fragment_container_nfc_lib"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:visibility="gone" />


                            <FrameLayout
                                android:id="@+id/inline_container"
                                android:layout_width="match_parent"
                                android:layout_height="500dp"
                                android:visibility="gone" />


                    </LinearLayout>


                    <company.tap.tapuilibrary.uikit.atoms.TapTextView
                        android:id="@+id/closeText"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:text="CLOSE"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <company.tap.tapuilibrary.uikit.atoms.TapImageView
                        android:id="@+id/closeImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_close"
                        android:text="close"
                        android:visibility="gone" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </androidx.core.widget.NestedScrollView>

    </FrameLayout>



</androidx.cardview.widget.CardView>