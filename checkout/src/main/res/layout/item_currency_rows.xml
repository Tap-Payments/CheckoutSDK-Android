<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.uikit.atoms.TapChip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tapcard_Chip"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"

    android:layout_marginTop="12dp"
    android:layout_gravity="center"
    app:cardElevation="0dp"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/CurrencyChipLinear"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_currency"
            android:layout_width="28dp"
            android:layout_height="@dimen/margin_basic_23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp" />

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/textView_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_basic_10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textColor="#4b4847"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="KWD"
            />
    </LinearLayout>
</company.tap.tapuilibrary.uikit.atoms.TapChip>