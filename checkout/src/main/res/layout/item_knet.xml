<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.atoms.TapChip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:id="@+id/tapcard_Chip"
    app:contentPadding="@dimen/margin_basic_10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <company.tap.tapuilibrary.atoms.TapImageView
        android:id="@+id/imageView_knet"
        android:layout_width="@dimen/margin_basic_25dp"
        android:layout_height="@dimen/margin_basic_25dp"
        android:layout_gravity="center"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="@dimen/margin_basic_8dp"
        android:layout_marginBottom="@dimen/margin_basic_8dp"
        android:src="@drawable/knet"
     />
    <company.tap.tapuilibrary.atoms.TapImageView
        android:id="@+id/imageView_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="@dimen/margin_basic_8dp"
        android:layout_marginBottom="@dimen/margin_basic_8dp"
        android:src="@drawable/benefit"
        android:visibility="gone"/>

</LinearLayout>
</company.tap.tapuilibrary.atoms.TapChip>