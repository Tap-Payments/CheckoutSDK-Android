<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/tapCardChip3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    android:hardwareAccelerated="true"
    card_view:cardElevation="10dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="@dimen/margin_basic_10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/tapCardChip3Linear"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_knet"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_basic_8dp"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/knet" />

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/benefit"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>