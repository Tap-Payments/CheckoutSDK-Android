<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardLinearLayout"
    android:layoutDirection="locale"
    android:orientation="vertical">
    <company.tap.tapuilibrary.uikit.atoms.TapChipGroup
        android:id="@+id/mainChipgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/tapSeparatorViewLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp">

        <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
            android:id="@+id/separator_1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/separator_color" />
        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:textDirection="locale"
            android:id="@+id/cardInfoHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:textAllCaps="true"
            android:textSize="@dimen/font_size_10sp"
            android:textColor="#9F9F9F"
            tools:text="Card InFormation"/>

    </LinearLayout>

</LinearLayout>