<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:id="@+id/constraintt">





    <company.tap.tapuilibraryy.uikit.organisms.TapPaymentInput
        android:id="@+id/tap_payment_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_basic_10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="-5dp"
        android:layoutDirection="locale" />

    <company.tap.tapuilibraryy.uikit.views.TapContactDetailsView
        android:id="@+id/contact_detailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <company.tap.tapuilibraryy.uikit.views.TapShippingDetailView
        android:id="@+id/ship_detailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <View
        android:id="@+id/touch_layer"
        android:clickable="true"
        android:background="@color/black_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" />


</LinearLayout>