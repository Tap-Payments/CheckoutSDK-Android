<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tapCardChip2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    android:layout_marginBottom="@dimen/margin_basic_10dp"
    android:hardwareAccelerated="true"
    app:cardElevation="0dp"
    android:layout_gravity="center">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/tapCardChip2Constraints"
      android:orientation="horizontal"
      android:paddingStart="18dp"
      android:paddingTop="5dp"
      android:paddingEnd="18dp"
      android:paddingBottom="5dp">

    <company.tap.tapuilibraryy.uikit.atoms.TapImageView
        android:id="@+id/imageView_amex"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/mastercard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView_carddetails"
        app:layout_constraintTop_toTopOf="parent" />

    <company.tap.tapuilibraryy.uikit.atoms.TapTextViewNew
        android:id="@+id/textView_carddetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="sans-serif"
        android:text="•••• XXXX"
        android:textColor="#4b4847"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView_amex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="•••• XXXX" />
  </androidx.constraintlayout.widget.ConstraintLayout>


  <ImageView
      android:id="@+id/deleteImageView2"
      android:layout_width="16dp"
      android:layout_height="12dp"
      android:layout_alignParentEnd="true"
      android:layout_gravity="right|top"
      android:layout_marginTop="-5dp"
      android:layout_marginEnd="-5dp"
      android:src="@drawable/btn_close_normal"
      android:visibility="gone"
      tools:ignore="RtlHardcoded" />

</FrameLayout>
